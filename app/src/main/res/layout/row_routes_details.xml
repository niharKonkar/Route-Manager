<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:background="@drawable/rect_shape"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:layout_margin="2dp"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/routeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/associatedVehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:fontFamily="serif"
                android:textColor="@color/black"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/associatedDriver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:fontFamily="serif"
                android:textColor="@color/black"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/associatedConductor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:fontFamily="serif"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Button
                android:drawableLeft="@drawable/right"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/rect"
                android:id="@+id/btnAssignVehicle"
                android:layout_width="0dp"
                android:drawablePadding="2dp"
                android:textSize="10dp"
                android:layout_margin="3dp"
                android:layout_height="match_parent"
                android:text="ASSIGN NEW VEHICLE"/>
            <Button
                android:layout_margin="3dp"
                android:textSize="10dp"
                android:drawableLeft="@drawable/wrong"
                android:textColor="@color/white"
                android:drawablePadding="2dp"
                android:background="@drawable/rect"
                android:id="@+id/btnDisassociate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="UNASSIGN  VEHICLE"/>
            <Button
                android:drawableLeft="@drawable/right"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/rect"
                android:id="@+id/btnChangeDriver"
                android:layout_width="0dp"
                android:drawablePadding="2dp"
                android:textSize="10dp"
                android:layout_margin="3dp"
                android:layout_height="match_parent"
                android:text="Change Driver"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:id="@+id/layShowRfidData"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

            <Button
                android:layout_margin="3dp"
                android:textSize="10dp"
                android:drawableLeft="@drawable/gps_location"
                android:textColor="@color/white"
                android:drawablePadding="2dp"
                android:background="@drawable/rect"
                android:id="@+id/btnLiveMap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Live Map"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            <Button
                android:layout_margin="3dp"
                android:textSize="10dp"
                android:drawableLeft="@drawable/map_navigation"
                android:textColor="@color/white"
                android:drawablePadding="2dp"
                android:background="@drawable/rect"
                android:id="@+id/btnTrack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="School Events"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            <Button

                android:layout_margin="3dp"
                android:textSize="10dp"
                android:drawableLeft="@drawable/rfid_data"
                android:textColor="@color/white"
                android:drawablePadding="2dp"
                android:background="@drawable/rect"
                android:id="@+id/btnRfidData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Rfid Data"/>
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:id="@+id/layNotShowRfidData"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Button
                android:drawableLeft="@drawable/gps_location"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/rect"
                android:id="@+id/btnLiveMap2"
                android:layout_width="0dp"
                android:drawablePadding="2dp"
                android:textSize="10dp"
                android:layout_margin="3dp"
                android:layout_height="match_parent"
                android:text="Live Map"/>
            <Button
                android:layout_margin="3dp"
                android:textSize="10dp"
                android:drawableLeft="@drawable/map_navigation"
                android:textColor="@color/white"
                android:drawablePadding="2dp"
                android:background="@drawable/rect"
                android:id="@+id/btnTrack2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="School Events"/>

        </LinearLayout>
    </LinearLayout>





</LinearLayout>