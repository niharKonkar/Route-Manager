<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="gone"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_weight="1"
                android:id="@+id/txtrasName"
                android:text="Name : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16dp"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/txtrasName"
                android:text="fsdjkfhdsf"
                android:id="@+id/rasName"
                android:textColor="#1c3392"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Card : "
                android:id="@+id/txtrasCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="14dp"
                android:text="gfgfg"
                android:layout_toRightOf="@+id/txtrasCard"
                android:id="@+id/rasCard"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_weight="1"
                android:id="@+id/txtrtnViolation"
                android:textSize="14dp"
                android:text="Violation : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="14dp"
                android:layout_toRightOf="@+id/txtrtnViolation"
                android:id="@+id/rtnViolation"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="fsdfdsfsdfdf"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:id="@+id/txtrtnTimestamp"
                android:text="Timestamp : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="14dp"
                android:text="dfjkg"
                android:layout_toRightOf="@+id/txtrtnTimestamp"
                android:id="@+id/rtnTimestamp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_margin="5dp"
            android:background="@color/colorPrimary"/>
    </LinearLayout>

</LinearLayout>