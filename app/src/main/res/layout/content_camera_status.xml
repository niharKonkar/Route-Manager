<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CameraStatusActivity"
    tools:showIn="@layout/activity_camera_status">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Swipe down to refresh the content."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/green"
                    android:textSize="16sp"
                    android:layout_margin="3dp"
                    android:text="GREEN ZONE"
                    android:id="@+id/tvGreenLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_margin="3dp"
                    android:id="@+id/tvGreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_margin="3dp"
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="3dp" />

                <TextView
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/orange1"
                    android:textSize="16sp"
                    android:layout_margin="3dp"
                    android:text="YELLOW ZONE"
                    android:id="@+id/tvYellowLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_margin="3dp"
                    android:id="@+id/tvYellow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_margin="3dp"
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="3dp" />

                <TextView
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/lightRed"
                    android:textSize="16sp"
                    android:layout_margin="3dp"
                    android:text="RED ZONE"
                    android:id="@+id/tvRedLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_margin="3dp"
                    android:id="@+id/tvRed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_margin="3dp"
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="3dp" />

            </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>