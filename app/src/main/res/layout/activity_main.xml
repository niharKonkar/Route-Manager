<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.routeassociation.MainActivity"
    android:background="@color/lightgrey">

    <include layout="@layout/top_bar"
        android:id="@+id/topBar"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:orientation="vertical"
                android:background="@drawable/button_background_3"
                android:id="@+id/vehicleDetailsLayout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHeight_default="percent">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"
                    android:id="@+id/vehicleAnimationView"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    app:lottie_renderMode="automatic"
                    app:lottie_enableMergePathsForKitKatAndAbove="true"
                    app:lottie_cacheComposition="false"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_percent="0.8"
                    android:padding="10dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="Vehicle Details"
                    app:layout_constraintTop_toBottomOf="@+id/vehicleAnimationView"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_percent="0.2"
                    android:background="@drawable/button_background_2"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/vehicleDetailsLayout"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="0.04"
                android:id="@+id/spacingView"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:orientation="vertical"
                android:background="@drawable/button_background_3"
                android:id="@+id/routeDetailsLayout"
                app:layout_constraintTop_toBottomOf="@+id/spacingView"
                app:layout_constraintHeight_default="percent">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"
                    android:id="@+id/routeAnimationView"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    app:lottie_renderMode="automatic"
                    app:lottie_enableMergePathsForKitKatAndAbove="true"
                    app:lottie_cacheComposition="false"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_percent="0.8"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="Route Details"
                    app:layout_constraintTop_toBottomOf="@+id/routeAnimationView"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_percent="0.2"
                    android:background="@drawable/button_background_2"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/routeDetailsLayout"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="0.04"
                android:id="@+id/spacingView2"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:orientation="vertical"
                android:background="@drawable/button_background_3"
                android:id="@+id/attendancelistLayout"
                app:layout_constraintTop_toBottomOf="@+id/spacingView2"
                app:layout_constraintHeight_default="percent">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"
                    android:id="@+id/routeAnimationView2"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    app:lottie_renderMode="automatic"
                    app:lottie_enableMergePathsForKitKatAndAbove="true"
                    app:lottie_cacheComposition="false"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_percent="0.8"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="Attendance Details"
                    app:layout_constraintTop_toBottomOf="@+id/routeAnimationView2"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_percent="0.2"
                    android:background="@drawable/button_background_2"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/attendancelistLayout"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="0.03"
                android:id="@+id/spacingView3"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>
