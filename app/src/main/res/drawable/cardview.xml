    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/lightgrey" />

            <corners android:radius="4dp" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="0.5dp"
        android:right="1dp"
        android:top="0.5dp">
        <shape android:shape="rectangle">
            <solid android:color="#F7F7F7" />

            <corners android:radius="4dp" />
        </shape>
    </item>

</layer-list>